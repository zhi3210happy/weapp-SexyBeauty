/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
page{
  background:#3b414c;
}
.section{
  display: flex;
  flex-direction:row;
  margin-right: 15px;
}

.section .num{
  width: 40px;
  height: 1.9rem;
  border-radius: 30%;
  background:#fff; 
  
}
.section__types{
  margin-left: 5px;
  width: 70px;
  font-size: 13px;
}
.section__index{
  margin-left: 5px;
  font-size: 18px;
  width: 40px;
}
.box{
  margin: 10px;
  background: rgb(242, 242, 242);
  border-radius: 7px;
  box-shadow: 0 0 8px #ccc;
  padding-bottom: 5px;
  overflow: hidden;
  text-align:center;
}
.box text{
  padding-left:10px;
  height: 30px;
  line-height: 30px;
  font-size: 18px;
  font-family: "微软雅黑" 
}
.box image{
  width: 95%;
  border-radius: 2%;
  display: block;
  margin: 0 auto
}
